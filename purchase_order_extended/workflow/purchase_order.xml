		<record id="act_approved" model="workflow.activity">
			<field name="wkf_id" ref="purchase.purchase_order"/>
			<field name="name">approved</field>
			<field name="kind">function</field>
			<field name="join_mode">AND</field>
			<field name="action">wkf_approve_order()</field>
		</record>
		<record id="act_order_sent" model="workflow.activity">
                        <field name="wkf_id" ref="purchase.purchase_order"/>
                        <field name="name">order_sent</field>
                        <field name="kind">function</field>
                        <field name="action">wkf_order_sent()</field>
                </record>
		<record id="trans_send_order" model="workflow.transition">
                        <field name="act_from" ref="act_approved"/>
                        <field name="act_to" ref="act_order_sent"/>
                        <field name="signal">order_sent</field>
                </record>
		<record id="trans_received" model="workflow.transition">
                        <field name="act_from" ref="act_order_sent"/>
                        <field name="act_to" ref="purchase.act_router"/>
                        <field name="signal">order_received</field>
                </record>
		<record id="purchase.act_router" model="workflow.activity">
			<field name="wkf_id" ref="purchase.purchase_order"/>
			<field name="name">router</field>
			<field name="split_mode">OR</field>
			<field name="kind">function</field>
			<field name="action">wkf_order_ordered()</field>
		</record>
		<record id="purchase.trans_confirmed_router" model="workflow.transition">
			<field name="act_from" ref="purchase.act_confirmed"/>
			<field name="act_to" ref="act_approved"/>
		</record>
		<record id="purchase_double_validation.trans_double_app_conf" model="workflow.transition">
			<field name="act_from" ref="purchase_double_validation.act_double_wait"/>
			<field name="act_to" ref="act_approved"/>
		</record>
	</data>
</openerp>

