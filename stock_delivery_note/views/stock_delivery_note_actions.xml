<openerp>
	<data>

                <record id="stock_delivery_note_action_confirm" model="ir.actions.server">
                        <field name="name">Mark confirmed</field>
                        <field name="condition">True</field>
                        <field name="type">ir.actions.server</field>
                        <field name="model_id" ref="model_stock_delivery_note"/>
                        <field name="state">code</field>
                        <field name="code">
			    self._state_confirm(cr,uid,context.get('active_ids'),context=context)	
                        </field>
                </record>

                <record id="stock_delivery_note_action_draft" model="ir.actions.server">
                        <field name="name">Mark draft</field>
                        <field name="condition">True</field>
                        <field name="type">ir.actions.server</field>
                        <field name="model_id" ref="model_stock_delivery_note"/>
                        <field name="state">code</field>
                        <field name="code">
                            self._state_draft()  
                        </field>
                </record>

                <record id="stock_delivery_note_action_done" model="ir.actions.server">
                        <field name="name">Mark done</field>
                        <field name="condition">True</field>
                        <field name="type">ir.actions.server</field>
                        <field name="model_id" ref="model_stock_delivery_note"/>
                        <field name="state">code</field>
                        <field name="code">
                            self._state_done()  
                        </field>
                </record>

                <record id="stock_delivery_note_action_cancel" model="ir.actions.server">
                        <field name="name">Mark cancelled</field>
                        <field name="condition">True</field>
                        <field name="type">ir.actions.server</field>
                        <field name="model_id" ref="model_stock_delivery_note"/>
                        <field name="state">code</field>
                        <field name="code">
                            self._state_cancel()  
                        </field>
                </record>

                <record model="ir.values" id="stock_delivery_note_context_menu_confirm">
                    <field name="name">Confirm Delivery Note</field>
                    <field name="model" eval="'stock.delivery_note'" />
                    <field name="model_id" ref="model_stock_delivery_note"/>
                    <field name="key" >action</field>
                    <field name="key2">client_action_multi</field>
                    <field name="value" eval="'ir.actions.server,%d'% stock_delivery_note_action_confirm" />
                    <field name="object" eval="True" />
                    <field name="action_id" ref="stock_delivery_note_action_confirm"/>
                </record>

        </data>
</openerp>

