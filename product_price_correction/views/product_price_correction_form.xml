<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="product_price_correction_form_view">
			<field name="name">product.price.correction.form</field>
			<field name="model">product.price.correction</field>
			<field name="arch" type="xml">
				<form string="Price Correction">
					<header>
						<button name="action_apply" states="draft,undone" string="Apply" class="oe_highlight"/>
						<button name="action_undo" states="done" string="Undo" class="oe_highlight"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,done" statusbar_colors='{"undone":"red","draft":"blue"}' readonly="1"/>
					</header>
					<sheet>
						<h1>
							<label string="Price Correction"/>
						</h1>
						<group>
							<group>
								<field name="move" required="True"/>
								<field name="product_template"/>
                                                                <field name="product"/>
							</group>
							<group>
                                                                <field name="date" string="Date"/>
								<field name="master"/>
                                                                <field name="strategy"/>
							</group>
						</group>
						<notebook>
							<page string="Overview">
                                                                <group>
                                                                	<field name="purchase_line_cost"/>
                                                                	<field name="product_template_historic_cost"/>
	                                                                <field name="product_historic_cost"/>
        	                                                        <field name="quant_cost"/>
								</group>
                                                        </page><!---
                                                        <page string="Purchases">
								<field name="purchase_lines" required="True">
									<tree>
										<field name="name"/>
										<field name="min_date"/>
										<field name="date_done"/>
										<field name="partner_id"/>
										<field name="backorder_id"/>
										<field name="state"/>
									</tree>
								</field>
							</page>-->
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
	</data>
</openerp>
	

