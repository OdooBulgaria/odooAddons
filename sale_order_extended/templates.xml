<openerp>
    <data>
        <record id="view_sale_order_extended" model="ir.ui.view">
            <field name="name">sale.order.extended.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_button_confirm']" position="attributes">
                    <attribute name="string">Derive Sale</attribute>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="parents" />
                    <field name="children" />
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <field name="manual_name" />
                </xpath>
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="invoiced_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </xpath>
            </field>
        </record>
        <record id="tree_sale_order_extended" model="ir.ui.view">
            <field name="name">sale.order.extended.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="invoiced_total"/>
                    <field name="invoiced_rate"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
